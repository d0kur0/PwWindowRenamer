<Window x:Class="PW.Window.Renamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW.Window.Renamer"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="430">
    <Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="1" Grid.Row="0" Height="50" Content="Задать путь до папки с игрой" Margin="5,5,5,5"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Height="50" Text="Имя окна" Background="#FFF1D6D6" Margin="5,5,5,5" />
            <Button Grid.Column="2" Grid.Row="1" Height="50" Content="Запустить процесс" Margin="5,5,5,5"/>
        </Grid>
    </Grid>
</Window>
